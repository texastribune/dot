{
  "name": "dot",
  "description": "The Texas Tribune's pixel tracking tool",
  "version": "2.0.0-3",
  "scripts": {
    "build": "npm run build:dashboard && npm run build:server",
    "build:dashboard": "rimraf dist && NODE_ENV=production webpack",
    "build:server": "rimraf build && tsc -b server/tsconfig.json",
    "lint": "eslint **/*.{ts,js,vue}",
    "start": "touch dist/assets.json && NODE_ENV=development nodemon --watch server --ext ts --exec ts-node --project server/tsconfig.json server/app.ts",
    "start:prod": "NODE_ENV=production node build/server/app.js",
    "release": "release-it"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/texastribune/dot"
  },
  "bugs": {
    "url": "https://github.com/texastribune/dot/issues"
  },
  "dependencies": {
    "@sentry/node": "^5.15.4",
    "axios": "^0.19.2",
    "connect-slashes": "^1.4.0",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "express-jwt": "^5.3.3",
    "graphql": "^14.6.0",
    "graphql-tools": "^5.0.0",
    "jwks-rsa": "^1.8.0",
    "pug": "^2.0.4",
    "vue": "^2.6.11",
    "vuetify": "^2.2.21"
  },
  "devDependencies": {
    "@types/auth0-js": "^9.12.4",
    "@types/express": "^4.17.6",
    "@types/express-jwt": "0.0.42",
    "@types/graphql": "^14.5.0",
    "@types/node": "^12.12.35",
    "@types/webpack": "^4.41.11",
    "@types/webpack-dev-middleware": "^3.7.0",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "css-loader": "^3.5.2",
    "deepmerge": "^4.2.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-vue": "^7.0.0-alpha.0",
    "fibers": "^4.0.2",
    "mini-css-extract-plugin": "^0.9.0",
    "nodemon": "^2.0.3",
    "release-it": "^13.5.7",
    "rimraf": "^3.0.2",
    "sass": "^1.26.3",
    "sass-loader": "^8.0.2",
    "ts-loader": "^6.2.2",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3",
    "vue-loader": "^15.9.1",
    "vue-template-compiler": "^2.6.11",
    "webpack": "^4.42.1",
    "webpack-assets-manifest": "^3.1.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-middleware": "^3.7.2"
  },
  "license": "MIT",
  "release-it": {
    "hooks": {
      "after:bump": "cd analytics && mkdir v${version} && cd ../ && cp tracker/dot.js analytics/v${version} && git add analytics/v${version}/dot.js"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    }
  }
}
